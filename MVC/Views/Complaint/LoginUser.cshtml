@model MVC.Models.Login
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://motivity.eazework.com/images/slide_1.png"
                     class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form asp-action="LoginUser" asp-controller="Complaint">
                    <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
                    </div>

                    <div class="divider d-flex align-items-center my-4">
                        <p class="text-center fw-bold mx-3 mb-0">Login to your EazeWork account</p>
                    </div>
                    <div class="alert-danger">
                        @if (ViewData["LoginFlag"] != null)
                        {
                            @ViewData["LoginFlag"]
                            ;
                        }
                    </div>

                    <!-- Email input -->
                    <div class="from-group">
                        @*                <label asp-for="Username" class="control-label">Username</label>
                        *@                <input asp-for="Username" placeholder="Username" class="from-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <br />

                    <!-- Password input -->
                    <div class="from-group">
                        @*                <label asp-for="Password" class="control-label">Password</label>
                        *@                <input asp-for="Password" type="password" placeholder="Password" class="from-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <!-- Checkbox -->
                        @* <div class="form-check mb-0">
                        <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3" />
                        <label class="form-check-label" for="form2Example3">
                        Remember me
                        </label>
                        </div>
                        <a href="#!" class="text-body">Forgot password?</a>*@
                    </div>

                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button type="submit" class="btn btn-primary btn-lg"
                                style="padding-left: 2.5rem; padding-right: 2.5rem;">
                            Login
                        </button>
                        <p class="small fw-bold mt-2 pt-1 mb-0">
                            Don't have an account?    <a class="nav-link text-dark" asp-area="" asp-controller="Complaint" asp-action="Register">Register</a>

                        </p>
                    </div>

                </form>
            </div>
        </div>
    </div>

    </div>
</section>



<label>@Html.Raw(ViewBag.Message)</label>



